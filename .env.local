# Compliment Landing MVP - Local Development Environment
# Copy this file to .env.local and fill in your actual values

# ====================
# SUPABASE CONFIGURATION
# ====================
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# For Edge Functions (server-side only)
SUPABASE_SERVICE_KEY=your-service-key-here

# ====================
# EXTERNAL API KEYS
# ====================
# YouTube Data API v3 - Get from: https://console.developers.google.com/
VITE_YOUTUBE_API_KEY=your-youtube-api-key-here

# hCaptcha - Get from: https://www.hcaptcha.com/
VITE_HCAPTCHA_SITE_KEY=your-hcaptcha-site-key-here
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key-here

# ====================
# ANALYTICS & MONITORING
# ====================
# Google Analytics 4
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Hotjar (optional)
VITE_HOTJAR_ID=1234567

# ====================
# EMAIL SERVICE
# ====================
# Resend (for email notifications via Supabase Edge Functions)
RESEND_API_KEY=re_xxxxxxxxxxxx

# ====================
# DEVELOPMENT SETTINGS
# ====================
# Environment: development | staging | production
VITE_APP_ENV=development

# App URL (for redirects)
VITE_APP_URL=http://localhost:5173

# ====================
# DEMO MODE (for testing without APIs)
# ====================
# Set to true to enable mock mode without real API calls
VITE_MOCK_MODE=false
